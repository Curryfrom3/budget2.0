<!-- views/transactions/show.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= transaction.title %></title>
  </head>
  <body>
    <%- include('../partials/_navbar.ejs') %>
    <h1><%= transaction.title %> at <%= transaction.company %></h1>
    <% if (transaction.notes) { %>
    <p>Notes: <%= transaction.notes %></p>
    <% } %> <% if (transaction.postingLink) { %>
    <a href="<%= transaction.postingLink %>">Visit this job posting</a>
    <% } %>
    <p>The status of this transaction is: <%= transaction.status %></p>

    <!-- Add the following link -->
    <a href="/users/<%= user._id %>/transactions/<%= transaction._id %>/edit">
      Edit this transaction
    </a>
    <!--  -->

    <form
      action="/users/<%= user._id %>/transactions/<%= transaction._id %>?_method=DELETE"
      method="POST"
    >
      <button type="submit">Delete this transaction</button>
    </form>
  </body>
</html>